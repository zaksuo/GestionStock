{% if articles|length > 0 %}
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="">Code</th>
                <th class="">Ref. fournisseur</th>
                <th class="">Libellé</th>
                <th class="">Prix de vente (TTC)</th>
                <th class="">Quantité</th>
                <th class="">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td class="article_code">{{ article.code }}</td>
                <td class="article_code">{{ article.codeFournisseur }}</td>
                <td class="article_libelle">{{ article.libelle }}</td>
                <td class="article_prixVente">{{ article.prixVente }} €</td>
                <td class="article_quantite">{{ article.articleStock.quantite }}</td>
                <td class="action_menu" id="{{ article.id }}">
                    <a class="add-article-btn" href="{{ path('facturation_article_add', {'id_facture': facture.id, 'id_article': article.id}) }}">
                        <div class="btn btn-small" title="Ajouter cet article à la facture"><span class="icon_16 icon_16_plus"></span></div>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    Aucun article correspondant à votre recherche n'a été trouvé.
{% endif %}