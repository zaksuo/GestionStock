    <h1 class="center">Inventaire</h1>

    <table class="table table-bordered">
            <tr>
        <th class="width30">Inventaire débuté le : </th>
        <td>{{ inventaire.dateCreation|date('d/m/Y à H:i') }}</td>
    </tr>
    <tr>
        <th class="width30">Inventaire clos : </th>
        <td>{% if inventaire.cloture %}Le {{ inventaire.dateCloture|date('d/m/Y à H:i') }}{% else %}Non clos{% endif %}</td>
    </tr>
    <tr>
        <th>Valeur HT du stock : </th>
        <td>{{ inventaire.valeurStock }} €</td>
    </tr>
    <tr>
        <th>Valeur HT des pertes estimées : </th>
        <td>{{ inventaire.valeurPerteEstim }} €</td>
    </tr>
   </table>

   <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="">Libellé</th>
                <th class="">Prix HT</th>
                <th class="">Quantité</th>
                <th class="">Valeur HT</th>
            </tr>
        </thead>

        <tbody>
        {% for inv_divers in inventaire.invDivers %}
            <tr>
                <td class="center">{{ inv_divers.libelle }}</td>
                <td class="right">{{ inv_divers.prixUnitaire }} €</td>
                <td class="center">{{ inv_divers.quantite }}</td>
                <td class="center">{{ inv_divers.getValeur }} €</td>
            </tr>
        {% endfor %}
        </tbody>
   </table> 

   <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="width10">Code</th>
                <th class="width30">Libellé</th>
                <th class="width10">Prix HT</th>
                <th class="width10">Quantité estimée</th>
                <th class="width10">Quantité réelle</th>
                <th class="width10">Erreur</th>
                <th class="width10">Valeur HT</th>
                <th class="width10">Perte HT</th>
            </tr>
        </thead>

        <tbody>
        {% for inv_article in inventaire.invArticles %}
            <tr>
                <td class="bold center">{{ inv_article.article.code }}</td>
                <td class="center">{{ inv_article.article.libelle }}</td>
                <td class="right">{{ inv_article.prixUnitaire }} €</td>
                <td class="center">{{ inv_article.quantiteEstim }}</td>
                <td class="center">{% if inv_article.quantiteReelle is null %}{{ inv_article.quantiteEstim }}{% else %}{{ inv_article.quantiteReelle }}{% endif %}</td>
                <td class="center">{% if inv_article.hasError %}{% if inv_article.getError > 0%} +{% endif %}{{ inv_article.getError }}{% endif %}</td>
                <td class="center">{{ inv_article.getValeur }} €</td>
                <td class="center">{% if inv_article.hasError %}{% if inv_article.getError < 0 %}{{ inv_article.getPerte }} €{% endif %}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>