{% extends "BoutiqueGestionStockBundle::layout.html.twig" %}

{% block content %}

    <h1>Liste des articles</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Code</th>
                <th>Libellé</th>
                <th>Prix de vente</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td><a href="{{ path('article_show', { 'id': article.id }) }}">{{ article.code }}</a></td>
                <td>{{ article.libelle }}</td>
                <td>{{ article.prixVente }}</td>
                <td>{{ article.articleStock.quantite }}</td>
                <td>
                    <a href="{{ path('article_show', { 'id': article.id }) }}">Détail</a>
                    <a href="{{ path('article_edit', { 'id': article.id }) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}


