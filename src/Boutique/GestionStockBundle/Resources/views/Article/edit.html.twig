{% extends "BoutiqueGestionStockBundle::layout.html.twig" %}

{% block content %}

    <h1>Modification d'un article</h1>

    <form action="{{ path('article_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Modifier</button>
        </p>
    </form>

    <a href="{{ path('article') }}">Annuler</a> |
    <a href="{{ path('article_delete', { 'id': entity.id }) }}">Supprimer</a>

{% endblock %}