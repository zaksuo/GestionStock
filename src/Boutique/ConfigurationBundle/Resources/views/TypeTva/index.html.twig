{% extends "BoutiqueConfigurationBundle::layout.html.twig" %}

{% block content %}
    <h4>Liste des types de TVA</h4>

    <a href="{{ path('typeTva_new') }}" class="btn btn-success">Ajouter un type de TVA</a>
    <br /><br />
    <table class="table table-bordered table-striped">
        <tr>
            <th>ID</th>
            <th>Libell√©</th>
            <th>Valeur pour calcul</th>
            <th>Actions</th>
        </tr>
