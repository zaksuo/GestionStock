{% extends "BoutiqueConfigurationBundle::layout.html.twig" %}

{% block content %}
    <h1>Remise</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Mail</th>
                <td>{{ entity.mail }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('remise') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('remise_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>
            <form action="{{ path('remise_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">Delete</button>
            </form>
        </li>
    </ul>
{% endblock %}